- content_for :head do
  = stylesheet_link_tag 'users'

.content.container-fluid
  .row
    .col-md-6.left
      %h1 Inscription
      = form_for(@user) do |f|
        = render 'shared/error_messages', :object => f.object
        .formulaire
          .field
            = f.label :nom
            %br/
            = f.text_field :nom
          .field
            = f.label :prenom
            %br/
            = f.text_field :prenom
          .field
            = f.label :email
            %br/
            = f.text_field :email
          .field
            = f.label :password
            %br/
            = f.password_field :password
          .field
            = f.label :password_confirmation, "Confirmation"
            %br/
            = f.password_field :password_confirmation
          .actions
            = f.submit "Inscription"
